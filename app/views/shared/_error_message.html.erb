<!-- This partial is rendered in Signup page (users/new.html.erb). It is not related to the error message shown in the Sign in page. -->
<% if @user.errors.any? %>
	<div id = "error_explanation">
		<div class = "alert alert-error">
			The form contains <%= pluralize(@user.errors.count, 'error') %>
		</div>
		<ul>
			<% @user.errors.full_messages.each do |msg|%>
				<li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>