<% provide(:title, @user.name) %>
<div class = "row">
	<aside class = "span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<br> <%= @user.email %>			
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<section>
		<%= render 'follow_form' %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
				<ol class = "microposts">
					<%= render @microposts %>
				</ol>
				<%= will_paginate @microposts %>
		<% end %>
	</section>
</div>
